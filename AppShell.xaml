<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp5.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp5"
    Shell.FlyoutBehavior="Flyout">
   
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
        Title="Ana sayfa"
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        
        <ShellContent
        Title="Kredi hesaplama"
        Icon="kredi.png"
        ContentTemplate="{DataTemplate local:Kredi}"
        Route="Kredi" />
        
        <ShellContent
        Title="Vücut kitle indeksi"
        Icon="vucut.png"
        ContentTemplate="{DataTemplate local:VücutKıtle}"
        Route="ColorPicker1" />
        
        <ShellContent
        Title="Renk seçici"
        Icon="renk.png"
        ContentTemplate="{DataTemplate local:Renk}"
        Route="Renk" />
        
        <ShellContent
        Title="Görevler"
        Icon="gorev.png"
        ContentTemplate="{DataTemplate local:Görev}"
        Route="Görev" />
        
    </FlyoutItem>

</Shell>
